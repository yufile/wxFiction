.chapter {
  width: 750rpx;
  height: 100%;
  background-color: bisque;
  padding-bottom: 30rpx ;
}
.chapter-content {
  width: 90%;
  margin: 0 auto;
  text-align: justify;
  font-size: 36rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  letter-spacing: 0.2em;
}
.content-title {
  text-align: center;
  font-size: 40rpx;
  padding: 20rpx 0;
  font-weight: bold;
}
.bottom {
  width: 90%;
  margin: 40rpx auto 0;
  display: flex;
  justify-content: space-around;
}
van-slider {
  width: 80%;
}
.fontbs {
  line-height: 150rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.sectionBack {
  width: 80%;
  margin: 0 auto;
}
