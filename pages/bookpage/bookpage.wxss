/* pages/bookpage/bookpage.wxss */
.bookpage {
  width: 750rpx;
  height: 100%;
  background-color: rgb(101, 124, 189);
  color: rgb(255, 255, 255);
}
.bookpage-top {
  width: 96%;
  padding-top: 15rpx;
  margin: 0 auto;
  display: flex;
}
.content-image view {
  margin-bottom: 20rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}
.content-image view:nth-of-type(1) {
  font-size: 38rpx;
}
.content-image {
  width: 100%;
  height:100%;
  float: right;
  
  text-align: justify;
  letter-spacing: 0.2em;
}
image {
  width: 300rpx;
  margin-left: 20rpx;
  float: right;
}
.comment {
  width: 100%;
  border-top: 4px solid rgb(167, 167, 167);
  padding: 10rpx;
  margin-top: 20rpx;
  color: rgb(0, 0, 0);
  background-color: rgb(255, 255, 255);
  letter-spacing: 0.2em;
  margin-bottom: 90rpx;
}
.title {
  font-size: 40rpx;
  margin-bottom: 20rpx;
}
.one-user {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}
.one-user text:nth-of-type(1) {
  width: 60rpx;
  height: 60rpx;
  background-color: aqua;
  border-radius: 50%;
  margin-right: 10rpx;
}
