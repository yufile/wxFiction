/* pages/bookcase/bookcase.wxss */
.bookcase {
  width: 750rpx;
  height: 100%;
  background-color: rgb(85, 159, 209);
}
.bookcase-swiper {
  width: 100%;
  height: 300rpx;
}


.bookcase-swiper image {
  width: 750rpx;
  height: 300rpx;
}
.indicator-active-color {
  background-color: #fff;
}
.login {
  text-align: center;
  color: #fff;
  font-size: 40rpx;
  line-height: 100rpx;
  animation: yu ease 10s infinite;
}
@keyframes yu {
  0%{background-color: rgb(0, 0, 0);}
  20%{background-color: rgb(4, 184, 255);}
  40%{background-color: rgb(124, 146, 0);}
  60%{background-color: rgb(216, 0, 187);}
  80%{background-color: rgba(255, 0, 0);}
  100%{background-color: rgb(0, 0, 0);}
}